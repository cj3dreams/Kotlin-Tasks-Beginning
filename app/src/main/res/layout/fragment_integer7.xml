<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:text="Integer7. Дано двузначное число. Найти сумму и произведение его цифр."
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextInteger7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="32dp"
        android:hint="Введите положительное двузначное число"
        android:inputType="numberSigned"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonInteger7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="Найти"
        android:backgroundTint="#F06292"
        android:layout_margin="32dp"/>
</RelativeLayout>