<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:text="Boolean7. Даны три целых числа: A, B, C. Проверить истинность высказывания: «Число B находится между числами A и C»."
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextBoolean7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="32dp"
        android:hint="Введите число A"
        android:inputType="numberSigned"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextBoolean7_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="155dp"
        android:layout_marginRight="32dp"
        android:hint="Введите число B"
        android:inputType="numberSigned"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextBoolean7_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="205dp"
        android:layout_marginRight="32dp"
        android:hint="Введите число C"
        android:inputType="numberSigned"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonBoolean7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="Найти"
        android:backgroundTint="#FF5722"
        android:layout_margin="32dp"/>
</RelativeLayout>