<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="MainFragment"
        android:padding="26dp"
        android:orientation="vertical">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/web_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/maingif" />

        <Button
            android:id="@+id/BeginButton"
            android:layout_width="match_parent"
            android:text="BEGIN"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#7986CB"/>

        <Button
            android:id="@+id/IntegerButton"
            android:layout_width="match_parent"
            android:text="INTEGER"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#F06292"/>

        <Button
            android:id="@+id/BooleanButton"
            android:layout_width="match_parent"
            android:text="BOOLEAN"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#FF5722"/>


        <Button
            android:id="@+id/IfButton"
            android:layout_width="match_parent"
            android:text="IF"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"/>

        <Button
            android:id="@+id/CaseButton"
            android:layout_width="match_parent"
            android:text="Case"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#FF018786"/>

        <Button
            android:id="@+id/ForButton"
            android:layout_width="match_parent"
            android:text="FOR"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#4DD0E1"/>

        <ImageButton
            android:id="@+id/telegram"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:clickable="true"
            android:src="@drawable/telegramma" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/web_view2828"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:src="@drawable/maingif" />

    </LinearLayout>
</ScrollView>